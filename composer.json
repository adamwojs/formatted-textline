{
  "name": "adamwojs/ibexa-formatted-textline",
  "license": "MIT",
  "type": "ibexa-bundle",
  "description": "",
  "keywords": [
    "ibexa-dxp"
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ibexa/core": "^4.6",
    "ibexa/admin-ui": "^4.6",
    "ibexa/doctrine-schema": "^4.6",
    "symfony/config": "^5.4",
    "symfony/dependency-injection": "^5.4",
    "symfony/event-dispatcher": "^5.4",
    "symfony/event-dispatcher-contracts": "^2.2 || ^3",
    "symfony/form": "^5.4",
    "symfony/http-foundation": "^5.4",
    "symfony/http-kernel": "^5.4",
    "symfony/yaml": "^5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "ibexa/code-style": "^1.1",
    "ibexa/solr": "^4.6@dev",
    "phpstan/phpstan": "^1.10",
    "symfony/maker-bundle": "^1.31"
  },
  "autoload": {
    "psr-4": {
      "AdamWojs\\IbexaFormattedTextLineBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AdamWojs\\IbexaFormattedTextLineBundle\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "fix-cs": "php-cs-fixer fix -v --show-progress=dots",
    "check-cs": "php-cs-fixer fix --dry-run -v --diff --show-progress=dots",
    "test": "phpunit -c phpunit.xml.dist"
  },
  "scripts-descriptions": {
    "fix-cs": "Automatically fixes code style in all files",
    "check-cs": "Run code style checker for all files",
    "test": "Run automatic tests",
    "phpstan": "Run static code analysis"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "2.0.x-dev"
    }
  },
  "config": {
    "allow-plugins": {
      "*": false
    }
  }
}

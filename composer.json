{
  "name": "adamwojs/ibexa-formatted-textline",
  "license": "MIT",
  "type": "ibexa-bundle",
  "description": "",
  "keywords": [
    "ibexa-dxp"
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ezsystems/ezplatform-kernel": "^1.3@dev",
    "ezsystems/ezplatform-admin-ui": "^2.3",
    "symfony/config": "^5.2",
    "symfony/dependency-injection": "^5.2",
    "symfony/event-dispatcher": "^5.2",
    "symfony/event-dispatcher-contracts": "^2.2",
    "symfony/http-foundation": "^5.2",
    "symfony/http-kernel": "^5.2",
    "symfony/yaml": "^5.2",
    "symfony/form": "^5.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "ezsystems/ezplatform-code-style": "^0.3",
    "ezsystems/ezplatform-solr-search-engine": "^3.3",
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpstan/phpstan-phpunit": "^0.12.17",
    "symfony/maker-bundle": "^1.31"
  },
  "autoload": {
    "psr-4": {
      "AdamWojs\\IbexaFormattedTextLineBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AdamWojs\\IbexaFormattedTextLineBundle\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "fix-cs": "php-cs-fixer fix -v --show-progress=dots",
    "check-cs": "php-cs-fixer fix --dry-run -v --diff --show-progress=dots",
    "test": "phpunit -c phpunit.xml.dist"
  },
  "scripts-descriptions": {
    "fix-cs": "Automatically fixes code style in all files",
    "check-cs": "Run code style checker for all files",
    "test": "Run automatic tests",
    "phpstan": "Run static code analysis"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  }
}
